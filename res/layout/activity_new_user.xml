<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/New_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/New_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/New_UserName"
        android:layout_below="@+id/New_UserName"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/New_Re_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/New_Password"
        android:layout_below="@+id/New_Password"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Re-enter Password"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/SubmitNewUser"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/New_Re_Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:onClick="OnClickNewUserSubmit"
        android:text="Register!" />

</RelativeLayout>
